{
  "manifest_version": 2,

  "name": "1-800-Genesys",
  "description": "Browser interface into 1-800-Genesys",
  "version": "1.0",

  "icons": { "16":  "images/swirl_16.png",
             "48":  "images/swirl_64.png",
             "128": "images/swirl_128.png" },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": [
    "https://genesysvoice.com:8080/",
    "http://genesysvoice.com:8080/",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "images/swirl_16.png",
    "default_popup": "index.html"
  }
}
